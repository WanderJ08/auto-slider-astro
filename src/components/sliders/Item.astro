---
interface Props {
    position: number;
    img: string;
}

const { position, img } = Astro.props;
---

<div class="item" style={`--position: ${position}`}>
  <img src={img} alt="" />
</div>

<style>
  .item {
    width: var(--width);
    height: var(--height);
    position: absolute;
    left: 100%;
    animation: autoRun 10s linear infinite;
    transition: filter 0.5s;
    animation-delay: calc(
      (10s / var(--quantity)) * (var(--position) - 1)
    ) !important;
  }

  .item img {
    width: 100%;
    border-radius: 10%;
    background-size: cover;
  }
</style>
